# =========================
# Server
# =========================
PORT=8080
NODE_ENV=development

# Comma-separated list of allowed origins (leave empty in dev)
# Example:
# CORS_ORIGINS=https://cars.example.com,https://admin.example.com
CORS_ORIGINS=

# =========================
# Airtable
# =========================
# Personal Access Token (PAT)
AIRTABLE_TOKEN=pat_xxxxxxxxxxxxxxxxx

# Base ID
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX

# Table names (MUST match Airtable exactly)
AIRTABLE_TABLE_DEALERS=DEALERS
AIRTABLE_TABLE_VEHICLES=VEHICLES
AIRTABLE_TABLE_REQUESTS=REQUESTS
AIRTABLE_TABLE_SALES=SALES
AIRTABLE_TABLE_MEDIA=VEHICLE MEDIA

# =========================
# Authentication
# =========================
# Used for dealer/admin session tokens
JWT_SECRET=change_this_to_a_long_random_string

# Optional: admin-only API key (if you want a simple admin gate)
ADMIN_API_KEY=change_me_optional

# =========================
# Cloudinary (Media Uploads)
# =========================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Root folder used when uploading dealer media
CLOUDINARY_FOLDER_ROOT=carsales-platform
